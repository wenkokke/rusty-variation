\RequirePackage{color}
\RequirePackage{listings}

\lstdefinelanguage{Rust}{%
  sensitive%
, morecomment=[l]{//}%
, morecomment=[s]{/*}{*/}%
, moredelim=[s][{\itshape\color[rgb]{0,0,0.75}}]{\#[}{]}%
, morestring=[b]{"}%
, alsodigit={}%
, alsoother={}%
, alsoletter={!}%
%
% [1] reserve keywords
% [2] traits
% [3] primitive types
% [4] type and value constructors
% [5] identifier
%
, morekeywords=[1]{fn, type, enum, let, move, match, ident, ty, block, pat, expr, struct, trait, impl, macro_rules!} 
, morekeywords=[2]{Error, Session, FnOnce}
, morekeywords=[3]{i32}
, morekeywords=[4]{Result, Ok, Err, Option, Some, None, Send, Recv, End, Neg, Add, Box, Dual, Self, Either, Void}
, morekeywords=[5]{assert!, assert_eq!, select!, offer!, fork!, select, offer, fork, panic!, send, recv, spawn, drop, new, cancel, channel, select_left, select_right, offer_either}
}

\lstdefinestyle{colouredRust}%
{ basicstyle=\ttfamily%
, identifierstyle=%
, commentstyle=\color[gray]{0.4}%
, stringstyle=\color[rgb]{0, 0, 0.5}%
, keywordstyle=\bfseries% reserved keywords
, keywordstyle=[2]\color[rgb]{0.75, 0, 0}% traits
, keywordstyle=[3]\color[rgb]{0, 0.5, 0}% primitive types
, keywordstyle=[4]\color[rgb]{0, 0.5, 0}% type and value constructors
, keywordstyle=[5]\color[rgb]{0, 0, 0.75}% macros
, columns=spaceflexible%
, keepspaces=true%
, showspaces=false%
, showtabs=false%
, showstringspaces=true%
}%

